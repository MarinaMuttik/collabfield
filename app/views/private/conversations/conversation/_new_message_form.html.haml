%form.send-private-message
  %input{:name => "conversation_id",
         :type => "hidden",
         :value => conversation.id}
  %input{:name => "user_id",
         :type => "hidden",
         :value => user.id}
  %textarea.form-control{:name => "body",
                         :placeholder => "Type a message here",
                         :rows => "3"}
  %input.btn.btn-success.send-message{:type => "submit"}
