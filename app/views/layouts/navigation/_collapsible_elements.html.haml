#navbar-collapsible-content.collapse.navbar-collapse.navbar-right
  %ul.navbar-nav.nav
    - if user_signed_in?
      %li.dropdown.pc-menu
        %a.dropdown-toggle#user-settings{ :href => "#",
                                         "data-toggle" => "dropdown" }
          %span#user-name= current_user.name
          %span.caret
      %ul.dropdown-menu{ :role => "menu" }
        %li= link_to 'Edit Profile', edit_user_registation_path
        %li= link_to 'Log Out', destroy_user_session_path, method: :delete
      %li.mobile-menu
        = link_to 'Edit Profile', edit_user_registation_path
      %li.mobile-menu
        = link_to 'Log Out', destroy_user_session_path, method: :delete
    - else
      %li= link_to 'Login', login_path
      %li= link_to 'Signup', signup_path
